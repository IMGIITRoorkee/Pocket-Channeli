{
  "manifest_version": 2,
  "name": "Pocket Channel-i",
  "description": "A gateway to Channel-i ever present in your browser",
  "version": "1.0",
  "background": {
    "scripts": [
      "js/background.js"
    ]
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "permissions": [
    "alarms",
    "tabs",
    "https://channeli.in/*"
  ],
  "browser_action": {
    "default_icon": "images/icon_active.png",
    "default_popup": "popup.html",
    "default_name": "Channel-i"
  }
}
